<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <div class="w-25">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', class:'w-50' %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if user_signed_in? %>
      <div class="nav-item w-50 d-flex justify-content-center">
        <%= form_with url: search_profiles_path, method: :get, class: 'w-50' do |form| %>
          <div class="input-group">
            <%= form.search_field :query, placeholder: 'Buscar Perfil', class: 'form-control' %>
            <%= form.submit "Pesquisar", class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Categorias de trabalho', job_categories_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "#{current_user.description}", current_user.profile, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Criar Nova Publicação', new_post_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= button_to 'Sair', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Criar Nova Conta', new_user_registration_path, class: 'btn btn-primary btn-lg mx-3' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Entrar', new_user_session_path, class: 'btn btn-primary btn-lg mx-3' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
