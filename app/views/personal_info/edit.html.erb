
<%= form_with model: @personal_info, url: user_personal_info_path do |form| %>
  <%= form.label :street %>
  <%= form.text_field :street %>

  <%= form.label :street_number %>
  <%= form.text_field :street_number %>

  <%= form.label :area %>
  <%= form.text_field :area %>

  <%= form.label :city %>
  <%= form.text_field :city %>

  <%= form.label :state %>
  <%= form.text_field :state %>

  <%= form.label :zip_code %>
  <%= form.text_field :zip_code %>

  <%= form.label :phone %>
  <%= form.text_field :phone %>

  <%= form.label :birth_date %>
  <%= form.date_field :birth_date %>

  <%= form.label :visibility %>
  <%= form.check_box :visibility %>

  <%= form.submit %>
<% end %>
