<div class="container">
  <%= form_with model: @post, class: 'mt-3' do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Título da Publicação' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content, 'Conteúdo' %> <span class='text-warning-emphasis'><small>(*)Arquivos suportados: .mp3, .mp4, .pdf, .jpg, .png</small></span>
      <%= f.rich_text_area :content, id: 'conteudo', class: 'form-control' %>
    </div>

    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  <% end %>
</div>