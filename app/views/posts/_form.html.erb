<div class="container">
  <%= form_with model: @post, class: 'mt-3' do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Título da Publicação' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content, 'Conteúdo' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group my-3">
      <%= f.label :status_archived %>
      <%= f.radio_button :status, 'archived', class:'me-2' %>

      <%= f.label :status_draft %>
      <%= f.radio_button :status, 'draft', class:'me-2' %>

      <%= f.label :status_published %>
      <%= f.radio_button :status, 'published' %>
    </div>

    <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  <% end %>
</div>