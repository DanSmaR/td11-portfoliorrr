<div class="container d-flex flex-column align-items-center">
  <h2>Notificações</h2>
  <% if @notifications&.any? %>
    <div class="list-group">
      <% @notifications.each do |notification| %>
        <div class="list-group">
          <% if notification.notifiable.is_a?(Comment) && notification.notifiable.post.user != current_user %>
            <p>
              <%= link_to notification.notifiable.user.full_name,
                profile_path(notification.notifiable.user.profile) %>
              comentou no post
              "<%= link_to notification.notifiable.post.title,
                post_path(notification.notifiable.post, anchor: "comment-#{notification.notifiable.id}") %>"
              há <%= time_ago_in_words(notification.notifiable.created_at) %>
            </p>
          <% elsif  notification.notifiable.is_a?(Invitation)%>
            <p>
              Você recebeu um convite para
              <%= link_to notification.notifiable.project_title, invitation_path(notification.notifiable) %>
              há <%= distance_of_time_in_words_to_now(notification.notifiable.created_at) %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Nenhuma notificação encontrada</p>
  <% end %>
</div>
