<div class="container">
  <div class="row">
    <section>
      <h2 class="text-center">Convites</h2>

      <div class="nav-scroller border-bottom mb-4">
        <nav class="d-flex nav nav-underline">
          <%= link_to 'Todos', invitations_path, class: "nav-item col nav-link link-body-emphasis" %>
          <%= link_to 'Pendentes', invitations_path(pending: true), class: "nav-item nav-link col link-body-emphasis #{'active' if params[:pending]}" %>
          <%= link_to 'Aceitos', invitations_path(accepted: true), class: "nav-item nav-link col link-body-emphasis #{'active' if params[:accepted]}" %>
          <%= link_to 'Recusados', invitations_path(declined: true), class: "nav-item nav-link col link-body-emphasis #{'active' if params[:declined]}" %>
          <%= link_to 'Expirados', invitations_path(expired: true), class: "nav-item nav-link col link-body-emphasis #{'active' if params[:expired]}" %>
        </nav>
      </div>
    
      <div class="d-flex flex-wrap justify-content-around">
        <% if @invitations.empty? %>
          <p class="text-center">Nenhum convite encontrado</p>
        <% else %>
          <% @invitations.each do |invitation| %>
            <div class="col-md-5 p-4 m-4 shadow rounded">
              <%= link_to invitation_path(invitation), class: "text-decoration-none link-dark" do %>
                <div class="card-body">
                  <h4 class="text-break text-primary"><%= invitation.project_title %></h4>
                  <p><%= invitation.truncate_description %></p>

                  <% if invitation.pending? %>
                    <p class="card-subtitle mb-2 text-muted">Expira em: <%= distance_of_time_in_words(Time.now, invitation.expiration_date) %></p>
                  <% elsif invitation.accepted? %>
                    <p class="card-subtitle mb-2 text-success">Aceito</p>
                  <% elsif invitation.expired? %>
                    <p class="card-subtitle mb-2 text-danger">Expirado</p>
                  <% elsif invitation.declined? %>
                    <p class="card-subtitle mb-2 text-danger">Recusado</p>
                  <% end %>
                
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>
  </div>
</div>
