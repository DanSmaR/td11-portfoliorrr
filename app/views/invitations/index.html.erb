<div class="container">
  <div class="row">
    <section class="col-md-9 y-5">
      <h2>Convites</h2>
      <% @invitations.each do |invitation| %>
      <div class="feed-post shadow mb-4 p-3 rounded" id="post-list">
        <%= link_to invitation_path(invitation), class: "text-decoration-none link-dark" do %>
          <div class="card-body">
            <h4 class="text-break text-primary"><%= invitation.project_title %></h4>
            <p>
              <%= invitation.project_description.truncate(50) %>
            </p>
            <p class="card-subtitle mb-2 text-muted">Expira em: <%= distance_of_time_in_words(Time.now, invitation.expiration_date) %></p>
          </div>
        <% end %>
      </div>
      <% end %>
    </section>
  </div>
</div>