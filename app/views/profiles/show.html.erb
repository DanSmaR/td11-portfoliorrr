<div class="d-flex">
  <div class="container d-flex flex-column border-end vh-100 w-50">

    <% if @profile.user.posts.pinned.any? %>
      <div id="fixed">
        <h2 class="text-primary" id="post-list-title">Destaque</h2>
        <section>
          <%= render partial: 'posts/listing', locals: { posts: @profile.user.posts.pinned } %>
        </section>
      </div>
    <% end %>

    <div id="publications">
      <h2 id="post-list-title">Publicações</h2>
      <section>
        <%= render partial: 'posts/listing', locals: { posts: @profile.user.posts.unpinned.order(created_at: :desc) } %>
      </section>
    </div>

  </div>

  <div class="container w-50 d-flex flex-column px-5 align-items-end">
    <aside class="px-5">
      <section class="text-center d-flex flex-column align-items-center">
        <div class="ratio ratio-1x1 rounded-circle overflow-hidden w-50">
          <%= image_tag url_for(@profile.photo), class: 'img-cover' if @profile.photo.present? %>
        </div>

        <%= link_to 'Alterar foto', edit_profile_path(@profile), class: 'badge bg-secondary' %>
        <h4><%= @user.full_name %></h4>
        <div class="d-flex gap-4">
          <div class="d-flex flex-column" id="followers-count">
            <%= link_to profile_connections_path(@profile), class: "text-decoration-none fs-5" do %>
              <p><%= @followers_count %> <%= t(Connection.human_attribute_name(:follower_id, count: @followers_count))%></p>
            <% end %>
          </div>
          <div class="text-center d-flex flex-column" id="following-count">
            <%= link_to profile_following_path(@profile), class: "text-decoration-none fs-5" do %>
              <p><%= @followed_count %> <%= t(Connection.human_attribute_name(:followed_profile_id))%> </p>
            <% end %>
          </div>
        </div>
        <div class="w-75">
          <% if current_user.profile != @profile %>
            <% if @profile.following?(current_user.profile) %>
              <%= button_to 'Deixar de Seguir', connection_unfollow_path(@profile.followers.find_by(follower: current_user.profile)), method: :patch, class: 'btn btn-danger w-100' %>
            <% elsif @profile.inactive_follower?(current_user.profile) %>
              <%= button_to 'Seguir', connection_follow_again_path(@profile.followers.find_by(follower: current_user.profile)), method: :patch, class: 'btn btn-primary w-100' %>
            <% else %>
              <%= button_to 'Seguir', profile_connections_path(@profile), class: 'btn btn-primary w-100' %>
            <% end %>
          <% end %>
        </div>
        
      </section>
      <section>
        <%= render 'profile/profile', profile: @profile, professional_infos: @professional_infos, personal_info: @personal_info %>
      </section>
    </aside>
  </div>
</div>
