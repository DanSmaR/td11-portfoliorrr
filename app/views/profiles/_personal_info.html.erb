<ul>
  <% if personal_info.has_key?('visibility') && user_is_owner %>
    <li class="fs-5 mb-3">
      <span class="fw-bold"><%= PersonalInfo.human_attribute_name('visibility') %>:</span>
      <%= t(info_fixer(personal_info['visibility'])) %>
    </li>
  <% end %>
  <% personal_info.each do |attribute, value| %>    
    <% next if attribute == 'visibility' %>
    <% if value && attribute == 'birth_date' %>
      <li>
        <span class="fw-bold"><%= PersonalInfo.human_attribute_name(attribute) %></span>:
        <%= l(info_fixer(value.to_date)) %>
      </li>
    <% else %>
      <li>
        <span class="fw-bold"><%= PersonalInfo.human_attribute_name(attribute) %></span>:
        <%= info_fixer(value) %>
      </li>
    <% end %>  
  <% end %>
</ul>