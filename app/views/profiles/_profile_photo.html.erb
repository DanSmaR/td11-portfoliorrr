<% if profile.photo.present? && profile.valid? %>
  <%= image_tag profile.photo, alt: t('.alt_text'), width: '130rem', class: 'profile-picture img-cover rounded-circle mx-auto mt-2' %>
<% else %>
  <%= image_tag 'default_portfoliorrr_photo.png', width: '130rem', alt: t('.alt_text'), class: 'profile-picture img-cover rounded-circle mx-auto mt-2' %>
<% end %>